// EJERCICIO 1 cadenas 

function esPalindromo(pal: string): Boolean;
var
  i, j: Integer;
begin
  i := 1;
  j := Length(pal);
  while i < j do
  begin
    if pal[i] <> pal[j] then
    begin
      Result := False;
      Exit;
    end;
    Inc(i);
    Dec(j);
  end;
  Result := True;
end;

function limpiarPalabra(pal: string): string;
var
  i: Integer;
begin
  Result := '';
  for i := 1 to Length(pal) do
    if pal[i] in ['a'..'z', 'A'..'Z'] then
      Result := Result + LowerCase(pal[i]);
end;

function ejercicio1a(cad: string): string;
var
  i: Integer;
  palabra, resultado: string;
begin
  palabra := '';
  resultado := '';
  cad := cad + ' '; // Asegura procesar la Ãºltima palabra

  for i := 1 to Length(cad) do
  begin
    if cad[i] <> ' ' then
      palabra := palabra + cad[i]
    else
    begin
      if palabra <> '' then
      begin
        palabra := limpiarPalabra(palabra);
        if (Length(palabra) > 1) and esPalindromo(palabra) then
          resultado := resultado + palabra + ' ';
        palabra := '';
      end;
    end;
  end;

  Result := (resultado); // Quita espacio final
end;


//llamada
  Edit3.Text := ejercicio1a(cad);
